---
interface Props {
  as?: keyof astroHTML.JSX.IntrinsicElements;
  className?: string;
  label?: string;
}

const {
  as: Wrapper = "input",
  className,
  label,
  required,
  ...rest
} = Astro.props;
---

<>
  {
    label ? (
      <>
        <label
          class:list={[
            "default-input-label",
            { required: required },
            className,
          ]}
        >
          <span class="default-input-label__text">{label}</span>
          <Wrapper
            type="text"
            {...rest}
            class:list={["default-input", className]}
          />
          <span class="default-input-label__error">Неверный формат</span>
        </label>
      </>
    ) : (
      <Wrapper
        type="text"
        {...rest}
        class:list={["default-input", className]}
      />
    )
  }
</>
