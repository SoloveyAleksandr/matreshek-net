---
import { Sprite } from "astro-icon";

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div class:list={["popup", className]}>
  <div class="popup__bg"></div>
  <div class="popup__wrapper">
    <div class="popup__container">
      <button type="button" class="popup__close">
        <Sprite name="fi_x" />
      </button>

      <slot />
    </div>
  </div>
</div>
